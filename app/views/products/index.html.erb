<h1 style="
  text-align: center; 
  font-family: 'Arial', sans-serif; 
  font-size: 36px; 
  color: #2a9d8f; /* Xanh ngọc đậm */
  margin-bottom: 20px; 
  text-shadow: 1px 1px 2px #ddd;">
  Products
</h1>

<div style="
  text-align: center; 
  margin-bottom: 20px;">
  <%= link_to "➕ New Product", new_product_path, style: "
    display: inline-block; 
    background-color: #4caf50; /* Xanh lá cây */ 
    color: white; 
    padding: 10px 20px; 
    text-decoration: none; 
    border-radius: 8px; 
    font-weight: bold; 
    font-size: 16px; 
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1); 
    transition: background-color 0.3s ease-in-out;" %>
</div>

<div id="products" style="
  display: grid; 
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); 
  gap: 20px; 
  max-width: 800px; 
  margin: 0 auto; 
  padding: 20px;">
  <% @products.each do |product| %>
    <div style="
      background: #fff; 
      border: 1px solid #ddd; 
      border-radius: 8px; 
      padding: 15px; 
      text-align: center; 
      box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1); 
      transition: transform 0.2s ease-in-out;">
      <%= link_to product.name, product, style: "
        font-family: 'Arial', sans-serif; 
        font-size: 18px; 
        color: #264653; /* Xanh đậm */ 
        text-decoration: none; 
        font-weight: bold;" %>
    </div>
  <% end %>
</div>

